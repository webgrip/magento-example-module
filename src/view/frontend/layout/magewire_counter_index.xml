<?xml version="1.0"?>
<page
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="content">
            <container name="examples.wrapper" htmlClass="grid grid-cols-3 gap-8" htmlTag="div">
                <block name="magewire.clicks"
                       template="WebGrip_ExampleModule::magewire/counter.phtml"
                >
                    <arguments>
                        <argument name="magewire" xsi:type="array">
                            <item name="type" xsi:type="object">WebGrip\ExampleModule\Magewire\Clicks\Clicks</item>
                        </argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
