<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="content">
            <container name="examples.wrapper" htmlClass="grid grid-cols-3 gap-8" htmlTag="div">
                <block name="magewire.clicks"
                       template="WebGrip_ExampleModule::magewire/clicks.phtml"
                >
                    <arguments>
                        <argument name="magewire" xsi:type="object">WebGrip\ExampleModule\Magewire\Clicks\Clicks</argument>
                    </arguments>
                </block>

                <block name="webgrip.examplemodule.dummy"
                       template="WebGrip_ExampleModule::example.phtml"
                >
                    <arguments>
                        <argument name="dummy_view_model" xsi:type="object">WebGrip\ExampleModule\ViewModels\MagewireDummy</argument>
                        <argument name="product_id" xsi:type="number">43</argument>
                    </arguments>
                </block>

                <block name="webgrip.examplemodule.magewiredummy"
                       template="WebGrip_ExampleModule::magewire.phtml"
                >
                    <arguments>
                        <argument name="magewire" xsi:type="object">WebGrip\ExampleModule\Magewire\Dummy</argument>
                        <argument name="product_id" xsi:type="number">44</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
